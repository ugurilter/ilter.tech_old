---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/resume">Resume</HeaderLink></li>
        <li><HeaderLink href="/projects">Projects</HeaderLink></li>
        <li><HeaderLink href="/blog">Blog</HeaderLink></li>
        <li><HeaderLink href="/contact">Contact</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://github.com/ugurilter"
    >
      <i
        class="fa-brands fa-github"
        aria-hidden="true"
        title="Ugur on GitHub"></i>
      <span class="fa-sr-only">Ugur on GitHub</span>
    </a>
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="#"
    >
      <i
        class="fa-brands fa-discord"
        aria-hidden="true"
        title="Ugur on Discord"></i>
      <span class="fa-sr-only">Ugur on Discord</span>
    </a>
    <a
    class="unset text-xl ml-4 hover:text-text-link"
    href="#"
  >
    <i
      class="fa-brands fa-steam"
      aria-hidden="true"
      title="Ugur on Steam"></i>
    <span class="fa-sr-only">Ugur on Steam</span>
  </a>
  <a
  class="unset text-xl ml-4 hover:text-text-link"
  href="#"
>
  <i
    class="fa-brands fa-stack-overflow"
    aria-hidden="true"
    title="Ugur on StackOverflow"></i>
  <span class="fa-sr-only">Ugur on StackOverflow</span>
</a>
    <!-- <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://twitter.com/flexdinesh"
    >
      <i
        class="fa-brands fa-twitter"
        aria-hidden="true"
        title="Dinesh on Twitter"></i>
      <span class="fa-sr-only">Dinesh on Twitter</span>
    </a> -->
  </div>
  <DarkModeToggle />
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
